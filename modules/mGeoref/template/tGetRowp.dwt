<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<input type="hidden" value="{ID}" id="geos_txt_id"/>
<input type="hidden" value="p" id="geos_txt_tipo"/>
<input type="hidden" value="{LATITUDE}" id="geos_txt_lat"/>
<input type="hidden" value="{LONGITUDE}" id="geos_txt_lon"/>
<style type="text/css">
  .left{width:260px; height:380px; position:relative; float: left;}
  .right{width:420px; height:380px; position:relative; float: right;}
  .geos_map_div{
    width:420px;
    height:350px;
  }
  .geos_caja_txt{
  border:1px solid #a1a1a1;
  padding:1px 1px; 
  /*ackground:#dddddd;*/
  height:20px;
  width:100%;
  border-radius:3px;
  -moz-border-radius:3px; /* Firefox 3.6 and earlier */
}
.geos_caja_txt_search{
  border:1px solid #a1a1a1;
  padding:1px 1px; 
  /*ackground:#dddddd;*/
  height:20px;
  width:40%;
  border-radius:3px;
  -moz-border-radius:3px; /* Firefox 3.6 and earlier */
}
 .geos_caja_no{
  border:1px solid #a1a1a1;
  padding:1px 1px; 
  /*ackground:#dddddd;*/
  height:20px;
  width:50px;
  border-radius:3px;
  -moz-border-radius:3px; /* Firefox 3.6 and earlier */
}
 .geos_caja_btn{
  border:1px solid #a1a1a1;
  padding:1px 1px; 
  /*ackground:#dddddd;*/
  height:20px;
  width:100px;
  border-radius:3px;
  -moz-border-radius:3px; /* Firefox 3.6 and earlier */
}
</style>
<div id="geos_contenedor">
  <div class="left">
    <table>
        <tr>
            <td>Descripción:</td>
            <td colspan="3">
                <input type="text" id="geos_search_name" class="geos_caja_txt" value="{DESCRIPCION}" />
            </td>
        </tr> 
        <tr>
            <td>Calle:</td>
            <td colspan="3">
                <input type="text" id="geos_txt_calle" class="geos_caja_txt" value="{CALLE}" />
            </td>
        </tr>     
        <tr>
            <td>No. Int:</td>
            <td><input type="text" id="geos_txt_noint" class="geos_caja_no" value="{NO_INT}"/></td>
            <td colspan="2">No Ext:
            <input type="text" id="geos_txt_noext" class="geos_caja_no" value="{NO_EXT}"/></td>            
        </tr>
        <tr>
            <td>Estado:</td>
            <td colspan="3">
                <select class="geos_caja_txt" id="geos_cbo_edo">
                  {ESTADOS}
                </select>
            </td>            
        </tr>  
        <tr>
            <td>Municipio:</td>
            <td colspan="3">
                <select class="geos_caja_txt" disabled id="geos_cbo_mun">
                  {MUNICIPIO}
                </select>
            </td>        
        </tr>                
        <tr>
            <td>Colonia:</td>
            <td colspan="3">
                <select class="geos_caja_txt" disabled id="geos_cbo_col">
                  {COLONIA}
                </select>
            </td>        
        </tr>    
        <tr>
            <td>CP :</td>
            <td><input type="text" id="geos_txt_cp" class="geos_caja_no" value="{CP}"/></td>
            <td colspan="2">
                <input type = 'button' class="geos_caja_btn" value="Buscar Dirección"  onclick="geos_find(1);"/>
            </td>
        </tr>
        <tr>
            <td>Tipo:</td>
            <td colspan="3">
                <select class="geos_caja_txt" id="geos_select_tipo">
                  {TIPO}
                </select>   
            </td>
        </tr>
        <tr>
            <td>Privacidad:</td>
            <td colspan="3">
                <select class="geos_caja_txt" id="geos_txt_priv">
                  {PRIVACIDAD}
                </select>
            </td>
        </tr>  
        <tr>
            <td>Radio (mts):</td>
            <td colspan="3">
                <select class="geos_caja_no" id="geos_txt_ra">
                  {RADIO}
                </select>
            </td>
        </tr>
        <tr>
           <td> Geopunto Base:</td>
           <td colspan ="3"> 
           <input type="checkbox" id="geos_check" {BASE}/>
           </td>
        </tr>
    </table>
  </div>
  <div class="right">
      <table>
        <tr><td align="right">
            Buscar (lon lat/Dirección):<input type="text" class="geos_caja_txt_search" id="geos_txt_find"/>
            &nbsp;<button id="geos_search">Buscar</button>
        </td>        
        </tr>
        <tr><td>
          <div id="geos_map" class="geos_map_div">
          </div>
        </td></tr>
      </table>
  </div>  
</div>
<div id="geos_tipo_confirm"></div>