<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<input type="hidden" id="qst_hid" value="{ID}" />
<input type="hidden" id="qst_hop" value="{OP}" />
<input type="hidden" id="qst_hcmp" value="{CMP}" />
<table>
<tr>
<td>Descripci&oacute;n:</td>
<td colspan="2"><input type="text" id="qst_tit_pre" class="caja_txt" value="{DSC}"/>
</td> 
</tr>
<tr>
<td>Tipo:</td>
<td colspan="2">
<select name="tp" id="qst_typ_pre" class="caja" onChange="selec_preg(this.value);qst_edt_op(this.value);">
<option value="0" >Seleccione un tipo.</option>
<!-- BEGIN tipo -->
<option value="{tipo.IDTP}" {tipo.S}>{tipo.TP}</option>
<!-- END tipo -->
</select>
</td>
</tr>
<tr><td>Activo:</td>
<td colspan="2"> 
<select name="act" id="qst_act_pre" class="caja">
<option value="1" {SAC}>SI</option>
<option value="0" {NAC}>NO</option>
</select></td>
</tr> 
<tr><td>Recordado:</td>
<td colspan="2"> 
<select name="reco" id="qst_rec_pre" class="caja">
<option value="1" {SRC}>SI</option>
<option value="0" {NRC}>NO</option>
</select></td>
</tr> 
<tr>
<td>Requerido:</td>
<td>
<select id="qst_req_pre" class="caja">
<option value="1" {SRQ}>SI</option>
<option value="0" {NRQ}>NO</option>
</select>
</td>
</tr>
<tr>
<td>Editable:</td>
<td>
<select id="qst_edt_pre" class="caja">
<option value="S" {EDS}>SI</option>
<option value="N" {EDN}>NO</option>
</select>
</td>
</tr>
<tr>
<td style="height:50px;" valign="top">Complemento:</td>
<td colspan="2" valign="top">
<div id="qst_com_pre" style="width:100%; border:#06 solid 1px; height:20px; " >{HTML}
</div>
<div id="sis_t" ></div>
</td>
</tr>
</table>
<script>
$(document).ready(function () {
	comp = $("#qst_hcmp").val();
	//alert(comp)
	
	//vaciar arreglos
	qst_aps = [];
	qst_apd = [];
	
	//Llenar arreglos
	$("#qst_comp").val(comp);
		 qst_aps = $('#qst_preg_sel div').map(function() {
		return this.id;
		}).get();
	
	
	 qst_apd = $('#qst_preg_dsp div').map(function() {
		return this.id;
		}).get();
	});
</script>