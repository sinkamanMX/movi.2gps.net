<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <style>
  #sortable1, #sortable2 {width: 100%; height: 90%;  
      top:0px; list-style-type: none; margin: 0; padding: 0 0 2.5em; float: left; margin-right: 10px; }
  #sortable1 li, #sortable2 li { margin: 0 5px 5px 5px; padding: 5px; font-size: 1.2em; width: 120px; }
  .w200{
    width: 200px; 
    height: 300px; 
    vertical-align: top;  
    overflow: hidden ;
    overflow-y: auto;    
  }
  .lista{
    border:1px solid #a1a1a1;
    border-style: solid;
    margin-top:5px;
  }
  .grp_icon{
    width: 20px; 
    height: 20px;     
  }
  .grp_caja_txt{
    border:1px solid #a1a1a1;
    /*padding:1px 1px; */
    /*ackground:#dddddd;*/
    height:21px;
    width:100%;
    border-radius:3px;
    -moz-border-radius:3px; /* Firefox 3.6 and earlier */
  }
  </style>
<fieldset><legend>Informaci√≥n</legend>
  <div id="tbl">
    <input type="hidden" id="grp_txt_id" value="{ID}" />
    <table class="tableP">
      <tr>
        <td>Nombre:</td>
        <td><input type="text" id="grp_txt_name" class="caja_txt" maxlength="60" value="{NAME}"/></td>
      </tr>
      <tr>
        <td>Abreviatura:</td>
        <td><input type="text" id="grp_txt_nameshort" class="caja_txt" maxlength="60" value="{ABREV}"/></td>
      </tr>
      <tr>
        <td>Padre:</td>
        <td>
          <select class="caja" id="grp_sel_padre">
            {PADRE}
          </select></td>             
      </tr>                           
    </table>
  </div>
</fieldset>
<fieldset><legend>Unidades</legend>
  <div>
    <table>
      <tr>
        <td>Disponibles:<br>
          <input type="text" id="grp_search_av" class="grp_caja_txt" value="Buscar" 
                onfocus="if (this.value == 'Buscar') {this.value = '';}" onblur="if (this.value == '') {this.value = 'Buscar';}"/>
            <div class="w200 lista" >
              <ul id="sortable2" class="connectedSortable">
                {UNSELECT}
              </ul>
            </div>
        </td>      
        <td colspan="2" align="center">
            <div class="ui-state-default ui-corner-all h20 total_width" onclick="grp_remove_all()">
              <div class="custom-icon-addall h20">
                <img class='total_width total_height' src='data:image/gif;base64,R0lGODlhAQABAJH/AP///wAAAMDAwAAAACH5BAEAAAIALAAAAAABAAEAQAICVAEAOw=='/>
              </div>
            </div>
            <br>
            <div class="h20 total_width ui-state-default ui-corner-all" onclick="grp_add_all()">
              <div class="custom-icon-dellall h20">
                <img class='total_width total_height' src='data:image/gif;base64,R0lGODlhAQABAJH/AP///wAAAMDAwAAAACH5BAEAAAIALAAAAAABAAEAQAICVAEAOw=='/>
              </div>
            </div>
        </td>
        <td>Seleccionadas:
          <input type="text" id="grp_search_na" class="grp_caja_txt" value="Buscar" 
                onfocus="if (this.value == 'Buscar') {this.value = '';}"      onblur="if (this.value == '') {this.value = 'Buscar';}"/>
            <div class="w200 lista" >
              <ul id="sortable1" class="connectedSortable">
                {USELECT}
              </ul>  
              </div>
        </td>        
      </tr>
    </table>
  </div>
</fieldset>