        	<!-- BEGIN com -->
        	<option value="{com.IDTC}" {com.SLTD}>{com.TCOM}</option>
        	<!-- END com -->
          </select></td>   
      </tr>                                                  
    </table>
    <input type="hidden" value="{ID}" id="teq_id" />
</div>
