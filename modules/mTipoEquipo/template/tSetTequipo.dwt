<script>
$(document).ready(function () {
	$( ".add" ).button({
      icons: {
        primary: "ui-icon-plus"
      },
      text: "Nuevo"
    });
	//Dialog generico		
	$( "#teq_eve_dialog_nvo" ).dialog({
		autoOpen:false,
		title:"Nuevo",
		modal: true,
		buttons: {
		Cancelar: function() {
			$("#teq_eve_dialog_nvo" ).dialog( "close" );
			},
		Guardar: function() {
			//alert("editar");
			eve_validar_nvo();
			//$("#teq_dialog" ).dialog( "close" );
			}			
		}
	});	
	
	//Dialog generico		
	$( "#teq_eve_dialog_edt" ).dialog({
		autoOpen:false,
		title:"Editar",
		modal: true,
		buttons: {
		Cancelar: function() {
			$("#teq_eve_dialog_edt" ).dialog( "close" );
			},
		Guardar: function() {
			//alert("editar");
			eve_validar_edt();
			//$("#teq_dialog" ).dialog( "close" );
			}			
		}
	});		
	//Dialog generico		
	$( "#teq_com_dialog_nvo" ).dialog({
		autoOpen:false,
		title:"Nuevo",
		modal: true,
		buttons: {
		Cancelar: function() {
			$("#teq_com_dialog_nvo" ).dialog( "close" );
			},
		Guardar: function() {
			//alert("editar");
			com_validar_nvo();
			//$("#teq_dialog" ).dialog( "close" );
			}			
		}
	});	
	
	//Dialog generico		
	$( "#teq_com_dialog_edt" ).dialog({
		autoOpen:false,
		title:"Editar",
		modal: true,
		buttons: {
		Cancelar: function() {
			$("#teq_eve_dialog_edt" ).dialog( "close" );
			},
		Guardar: function() {
			//alert("editar");
			com_validar_edt();
			//$("#teq_dialog" ).dialog( "close" );
			}			
		}
	});			
});


$( "#teq_tabs_main" ).tabs({
   show: function(event, ui) {
	   teq_load_datatable_eventos();
	   teq_load_datatable_comandos();
    }
});
</script>

<div id="tbl" style="height:24%">
    <table class="tableP">
                              
      <tr>
        <td>Marca:</td>
        <td>
        <select class="caja" id="teq_marc_edt" onchange="teq_modelo_edt(this.value)">
        <option value="0">Seleccione una marca</option>
        <!-- BEGIN marca -->
        <option value="{marca.IDMAR}" {marca.SLTD}>{marca.MARCA}</option>
        <!-- END marca -->
        </select>
         
          </td>
        <td>Nombre:</td>
        <td><input type="text" id="teq_desc_edt" class="caja_txt" maxlength="60" value="{NAME}"/></td>            
      </tr>  
      <tr>
        <td>Modelo:</td>
