<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<script>
$(document).ready(function () {
	damegrupo();
	var f = new Date();  
	m = (f.getMonth()+1 <=9)?"0"+(f.getMonth()+1):f.getMonth()+1;
	d = (f.getDate()<=9)?"0"+(f.getDate()):f.getDate();
	today = f.getFullYear()+"-"+m+"-"+d;
	//alert(today)
	$("#start_date").val(today);
	$("#end_date").val(today);
	$( ".datepicker" ).datepicker({
		showOn: "button",
		buttonImage: "public/images/cal.gif",
		buttonImageOnly: true,
		maxDate: '0',
		dateFormat: "yy-mm-dd"
				});
	});
</script>

